<div class='col col-md-8 offset-md-2 link-yellow'>
	
	<div class="row">
		<div class="col-sm-9">
			<h2><%= @question.title %></h2>
		</div>

		<div class="col text-right">
			<h2><%= money(@question.price) %></h2>
		</div>
	</div>

	<div class='row' style='border: 1px solid lightgray; padding: 1em; background-color: white;'>
		<p><%= simple_format(@question.text) %></p>
	</div>

	<div class=" text-right">
		<% if current_user.present? && current_user.id == @question.user_id %>
			<%= link_to '[Edit]', edit_question_path(@question) %> <br>
		<% end %>
	</div>

	<div class='row'>
		<div class='col'>
			<h4>to: <%= @question.lang_to %></h>
		</div>

		<div class='col'>
			<p class=" text-right">
				<strong>requested</strong>
				<%= format_time(@question.created_at) %><br>
				<% if Profile.find(@question.user_id).image_url(:small).present? %>
					<%= image_tag Profile.find(@question.user_id).image_url(:small), class: 'avatar-small' %>
				<% else %>
					<%= image_tag 'default_avatar.jpg', class:"avatar-small" %>
				<% end %>
				<%= link_to User.find(@question.user_id).username, profile_path(@question.user_id) %>
			</p>
		</div>
	</div>

	<hr>
	
	<% if @question.answers.any? %>
		<h3><br>Translated.</h3>
		<% @question.answers.order(created_at: 'desc').each do |a| %>
			<p><%= simple_format(a.text) %></p>
			<div class="text-right ">
				<%= format_time(a.created_at) %><br>
				<% if User.find(a.user_id).profile.image_url.present? %>
					<%= image_tag User.find(a.user_id).profile.image_url, class: 'avatar-small' %>
				<% else %>
					<%= image_tag 'default_avatar.jpg', class:"avatar-small" %>
				<% end %>
				<%= link_to User.find(a.user_id).username, profile_path(a.user_id) %>
			</div>
			<hr>
		<% end %>

	<% else %>
		<%= form_for([@question, @question.answers.build]) do |form| %>
			<div class="field">
				<%# form.label :text %>
				<%= form.text_area :text, id: :answer_text, placeholder: 'Your answer', style: "width: 100%;" %>
			</div>

			<div class="field">
				<%= form.hidden_field :user_id, value: current_user.id %>
			</div>

			<div class="actions">
				<%= form.submit "Answer now and earn #{money(@question.price)}", class: "btn btn-post btn-block cursor" %>
			</div>
		<% end %>
	<% end %>


	<div class="">
		<br>
		<%# link_to 'Delete', @question, method: :delete, data: { confirm: 'Are you sure?' } %>
		<%= link_to 'Back', questions_path %>
	</div>

	
</div>

