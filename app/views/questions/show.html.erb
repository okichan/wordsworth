  <div class='col col-md-8 offset-md-2'>
    <p>
      <strong>Title:</strong>
      <%= @question.title %>
    </p>

    <p>
      <strong>Text:</strong>
      <%= simple_format(@question.text) %>
    </p>

    <p>
      <strong>Lang from:</strong>
      <%= @question.lang_from %>
    </p>

    <p>
      <strong>Lang to:</strong>
      <%= @question.lang_to %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @question.user_id %>
    </p>

    <p>
      <strong>User:</strong>
      <%= User.find(@question.user_id).username %>
    </p>

    <%= link_to 'Edit', edit_question_path(@question) %> <br>
    <%= link_to 'Delete', @question, method: :delete, data: { confirm: 'Are you sure?' } %><br>
    <%= link_to 'Back', questions_path %>
  </div>
