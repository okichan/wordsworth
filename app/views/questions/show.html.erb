<div class='col col-md-8 offset-md-2'>
	<h2><%= @question.title %></h2>

	<p>
		<%= simple_format(@question.text) %>
	</p>

	<p>
		<strong>from:</strong>
		<%= @question.lang_from %>
	</p>

	<p>
		<strong>to:</strong>
		<%= @question.lang_to %>
	</p>

	<p class="link-yellow text-right">
		<strong>asked</strong>
		<%= format_time(@question.created_at) %><br>
		<% if Profile.find(@question.user_id).image_url(:small).present? %>
			<%= image_tag Profile.find(@question.user_id).image_url(:small), class: 'avatar-small' %>
		<% else %>
			<%= image_tag 'default_avatar.jpg', class:"avatar-small" %>
		<% end %>
		<%= link_to User.find(@question.user_id).username, profile_path(@question.user_id) %>
	</p>

	<div class="link-yellow">
		<% if current_user.present? && current_user.id == @question.user_id %>
			<%= link_to 'Edit', edit_question_path(@question) %> <br>
		<% end %>
		<%# link_to 'Delete', @question, method: :delete, data: { confirm: 'Are you sure?' } %>
		<%= link_to 'Back', questions_path %>
	</div>

	
	
	<% if @question.answers.any? %>
		<% @question.answers.order(created_at: 'desc').each do |a| %>
			<p><%= simple_format(a.text) %></p>
			<div class="text-right">
				<%= format_time(a.created_at) %>
			</div>
			<hr>
			
		<% end %>
	<% end %>

	<%= form_for([@question, @question.answers.build]) do |form| %>


	<div class="field">
		<%# form.label :text %>
		<%= form.text_area :text, id: :answer_text, placeholder: 'Your answer' %>
	</div>

	<div class="field">
		<%= form.hidden_field :user_id, value: current_user.id %>
	</div>

	<div class="actions">
		<%= form.submit "Post" %>
	</div>
	<% end %>

	
	
</div>

