<div class='row'>
	<div class='col-md-8 offset-md-2'>
			<h2 class="space-bottom">Your translation requests.</h2>
			<% if unpaid_count > 0 %>
				<p class="space-bottom border">Notice:<br> There are <span style="color: tomato; font-size: 1.5em;"><%= unpaid_count %></span> unpaid requests.<br>
				To publish your requests, please proceed to payments.</p>
			  
			<% end %>

			<table>
				<thead>
					<tr>
						<th>title</th>
						<th>text</th>
						<th>date</th>
						<th>price</th>
						<th>Status</th>
					</tr>
				</thead>        
				<tbody>
					<% @questions.each do |q| %>
						<tr>
							<td><%= link_to q.title, question_path(q) %></td>
							<td><%= link_to q.text.truncate(34, separator: ' '), question_path(q) %></td>
							<td><%= format_time(q.created_at) %></td>
							<td><%= money(q.price) %></td>
							<td>
								<% if q.paid? %>
								<%= image_tag '5paid.png', width: 60 %>
								<% else %>
								<%= link_to 'Pay', new_charge_path(price: q.price, id: q.id), class: 'btn btn-danger' %>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>