<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>?</th>
      <th>Sender</th>
      <th>Content</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message %></td>
        <td><%= message.sender.username %></td>
        <td><%= message.content %></td>
        <td><%= format_time(message.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_conversation_message_path(@conversation) %>
