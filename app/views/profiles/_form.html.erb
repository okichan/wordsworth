<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%# form.label :image %><br>
		<%= form.file_field :image %>
	</div>

	<% if @profile.image_data? %>
		<div class="field">
			<%= image_tag @profile.image_url(:thumb) %>
		</div>
		<div class="field">
			Remove attachment: <%= form.check_box :remove_image %>
		</div>
	<% end %>

  <div class="field">
    <%= form.label :bio %><br>
    <%= form.text_area :bio, id: :profile_bio %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, id: :profile_user_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
