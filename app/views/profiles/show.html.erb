<% provide(:title, "Profile") %>

<div class="row">
	<div class="col col-md-4 offset-md-1">

		<div class="text-center link-yellow" >
			<%= image_tag check_avatar(@profile), class:"avatar" %>
			<% unless @profile.user.id == current_user.id %>
				<p><%= link_to 'Contact this person', new_conversation_path(receiver_id: @profile.id) %>  </p>
			<% else %>
				<p style="text-decoration: line-through;">Contact this person</p>
				This is you!
			<% end %>
			  
		</div>
	</div>

	<div class="col-md-5 link-yellow">
			<h2 class="profile-username"><%= @profile.user.username %></h2>
			
			<div class='stats-wrapper'>
				<div class="stats">
					<h3><%= @users_questions.size %> </h3>questions
				</div>
				<div class="stats">
					<h3><%= @users_answers.size %> </h3>answers
				</div>
			</div>

			<br>

			<% if @profile.bio.present? %>
				<div class='quote'>
					<p><%= simple_format(@profile.bio) %></p>
				</div>
			<% end %>
			<% if current_user.present? && current_user.id == @profile.user_id %>
				<%= link_to 'Edit', edit_profile_path(@profile) %> |
			<% end %>
			<%= link_to 'Back', url_for(:back) %>			

	</div>
</div>